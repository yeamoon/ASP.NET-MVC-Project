
@using FirstMVCApplication.Models;
@model List<TeacherViewModel>

@{
    ViewBag.Title = "Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ibox float-e-margins">
    <div class="ibox-title">
        <div class="row">
            <div class="col-lg-6">
                <h3>Student List</h3>
            </div>
            <div class="col-lg-6">
                <div align='right' style="margin-top: 10px;">

                    <a target='_blank' href='@Url.Action("Teacher", "Teacher", new {id = 0})' class="btn btn-primary btn-smaller">New Teacher</a>
                </div>
            </div>
        </div>
    </div>
    <div class="ibox-content">
        <table class="table table-striped table-bordered table-hover dataTables">
            <thead>
                <tr>
                    <th>
                        @Html.LabelFor(m => m.FirstOrDefault().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FirstOrDefault().LastName)
                    </th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a target='_blank' href='@Url.Action("Teacher", "Teacher", new {id = @item.Id})'>@item.FirstName</a>
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            <a href='@Url.Action("Delete", "Teacher", new {id = @item.Id})'>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


